---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import ProfileSd from './GoogleStructuredData/ProfileSd.astro';
import FaqSd from './GoogleStructuredData/FaqSd.astro';

interface Props {
	title: string;
	description: string;
	image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = '/website-ogimage-default.png' } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" href="/favicon.ico" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />



<link rel="preload" href="/fonts/NotoSans-VariableFont_wdth,wght.woff2" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/NotoSansJP-VariableFont_wght.woff2" as="font" type="font/woff" crossorigin />

<!-- <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet"> -->

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title ? title + " | Alex Stormwood" : "Alex Stormwood - Online Portfolio and Journal"}</title>
<meta name="title" content={title ? title + " | Alex Stormwood" : "Alex Stormwood - Online Portfolio and Journal"} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title ? title + " | Alex Stormwood" : "Alex Stormwood - Online Portfolio and Journal"} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:site" content="@AlexStormwood" />
<meta property="twitter:creator" content="@AlexStormwood" />
<meta name="twitter:card" property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta name="twitter:title" property="twitter:title" content={title ? title + " | Alex Stormwood" : "Alex Stormwood - Online Portfolio and Journal"} />
<meta property="twitter:description" content={description} />
<meta name="twitter:image" property="twitter:image" content={new URL(image, Astro.url)} />
<meta name="twitter:image:alt" content="Alex Stormwood. Gamedev, webdev, and more." />
<meta property="article:author" content="Alex Stormwood">
<meta property="profile:first_name" content="Alex">
<meta property="profile:last_name" content="Stormwood">
<meta property="profile:username" content="alexstormwood">

<ProfileSd heroImage={image} />
<FaqSd />

<link rel="sitemap" href="/sitemap-index.xml" />

<link
    rel="alternate"
    type="application/rss+xml"
    title="Alex Stormwood"
    href={new URL("rss.xml", Astro.site)}
/>